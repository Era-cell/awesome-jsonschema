{
  "$id": "https://raw.githubusercontent.com/jviotti/awesome-jsonschema/master/schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "array",
  "$defs": {
    "base-link": {
      "type": "object",
      "additionalProperties": false,
      "required": [ "type", "title", "summary", "url" ],
      "properties": {
        "type": { "type": "string" },
        "subtype": { "type": "string" },
        "year": {
          "type": "integer",
          "minimum": 0
        },
        "title": { "type": "string" },
        "summary": { "type": "string" },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    }
  },
  "items": {
    "anyOf": [
      {
        "type": "object",
        "allOf": [ { "$ref": "#/$defs/base-link" } ],
        "required": [ "year", "type" ],
        "properties": {
          "type": {
            "enum": [ "book", "video", "course", "article", "spec" ]
          }
        }
      },
      {
        "type": "object",
        "allOf": [ { "$ref": "#/$defs/base-link" } ],
        "required": [ "type" ],
        "properties": {
          "type": {
            "enum": [ "adoption" ]
          }
        }
      },
      {
        "type": "object",
        "allOf": [ { "$ref": "#/$defs/base-link" } ],
        "required": [ "type", "subtype" ],
        "properties": {
          "type": {
            "enum": [ "tool" ]
          },
          "subtype": {
            "enum": [ "JavaScript", "Rust", "C++" ]
          }
        }
      }
    ]
  }
}
