{
  "$id": "https://raw.githubusercontent.com/jviotti/awesome-jsonschema/master/schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": true,
    "required": [ "title", "url", "year", "type", "summary" ],
    "properties": {
      "title": {
        "type": "string"
      },
      "url": {
        "type": "string",
        "format": "uri"
      },
      "year": {
        "type": "integer",
        "minimum": 0
      },
      "type": {
        "enum": [ "book", "video", "course" ]
      },
      "summary": {
        "type": "string"
      }
    }
  }
}
